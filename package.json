{
	"name": "do_serverless_ts",
	"module": "src/main/index/index.ts",
	"description": "A simple serverless function framework written in TypeScript",
	"type": "module",
	"scripts": {
		"build": "docts build",
		"deploy": "doctl serverless deploy .",
		"publish": "bun run build && bun run deploy",
		"new": "docts fn new",
		"remove": "docts fn remove",
		"destroy": "doctl serverless undeploy",
		"push:env": "bunx dotenv-vault@latest push",
		"pull:env": "bunx dotenv-vault@latest pull"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^20.14.2",
		"@typescript-eslint/eslint-plugin": "^5.46.0",
		"@typescript-eslint/parser": "^5.46.0",
		"eslint": "^8.29.0",
		"prettier": "^2.8.1",
		"typescript": "^4.9.4"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
